<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/emailText" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" android:hint="email" android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" app:layout_constraintHorizontal_bias="0.0"/>
    <ImageView
            android:layout_width="146dp"
            android:layout_height="132dp" app:srcCompat="@drawable/bbdicon"
            android:id="@+id/imageView" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            android:layout_marginTop="72dp" app:layout_constraintTop_toTopOf="parent"
    />
    <TextView
            android:layout_width="0dp"
            android:layout_height="111dp"
            android:id="@+id/title"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" app:layout_constraintStart_toEndOf="@+id/imageView"
            android:textSize="30sp"
            android:lineSpacingExtra="8sp" android:fontFamily="@font/alfa_slab_one"
            app:layout_constraintBottom_toTopOf="@+id/emailText" android:textAlignment="center"
            android:text="Order your Lunch!"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordText" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/emailText" android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent" android:hint="password"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="Login"
            android:layout_width="169dp"
            android:id="@+id/loginButton" android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/passwordText"/>
</android.support.constraint.ConstraintLayout>